
@using Pharmacy.DB
@using Kendo.Mvc.UI

@{
    ViewBag.Title = "All Suppliers";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
}

@(Html.Kendo().Grid<Supplier>
    ().Name("SupplierGrid").Columns(c =>
    {
        //c.Bound(p => p.ID).Title("Id").Width(30) ;
        c.Bound(p => p.Name).Title("Name").Width(150);
        c.Bound(p => p.isActive).Title("Is Active").Width(150);
        c.Bound(p => p.Description).Title("Description").Width(150);
    })
    .DataSource(d => d
    .Ajax()
    .Read(r => r.Action("GetSupplierList", "Supplier"))
    .PageSize(10)
    )
    .Pageable()
    .Sortable()
    .Filterable()
    .Groupable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
)
