
@using Pharmacy.DB
@using Kendo.Mvc.UI

@{
    ViewBag.Title = "AllItems";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
}

@*@using Pharmacy.Models*@
@*TODO: Two options (1)Take Model Class  (2)Take original Class i.e. from DB
    Which approach is best*@
@*@(Html.Kendo().Grid<ItemValidation>*@
@(Html.Kendo().Grid<Item>
    ().Name("GridName").Columns(c =>
    {
        //c.Bound(p => p.ID);
        c.Bound(p => p.Name).Title("Name").Width(150);
        c.Bound(p => p.ItemTypeID).Title("Item Category").Width(130);
        c.Bound(p => p.ManufacturerID).Title("Manufacturer").Width(130);
        c.Bound(p => p.Shelf).Title("Shelf").Width(70);
        c.Bound(p => p.PurchasePrice).Title("Purchase Price").Width(123);
        c.Bound(p => p.SalePrice).Title("Sale Price").Width(90);
        c.Bound(p => p.PiecesPerPack).Title("Pieces Per Pack").Width(128);
        c.Bound(p => p.SalePricePerPiece).Title("Sale Price/Pack").Width(125);
        c.Bound(p => p.Description).Title("Description").Width(100);

    })
    .DataSource(d => d
    .Ajax()
    .Read(r => r.Action("GetItemList", "Item"))
    .PageSize(10)
    )
    .Pageable()
    .Sortable()
    .Filterable()
    .Groupable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))


)
