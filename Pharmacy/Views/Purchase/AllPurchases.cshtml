
@using Pharmacy.DB
@using Kendo.Mvc.UI

@{
    ViewBag.Title = "All Item Types";
    Layout = "~/Views/Shared/_LayoutLeftMenu.cshtml";
}

@(Html.Kendo().Grid<Purchase>
    ().Name("PurchaseListGrid").Columns(c =>
    {
        c.Bound(p => p.ID).Title("Id").Width(30);
        //c.Bound(p => p.Supplier.Name).Title("Name").Width(150);
        c.Bound(p => p.DateOfSupply).Title("Supply Date").Width(150);
        c.Bound(p => p.NetTotal).Title("Total Bill").Width(150);
    })
    .DataSource(d => d
    .Ajax()
    .Read(r => r.Action("GetPurchaseList", "Purchase"))
    .PageSize(10)
    )
    .Pageable()
    .Sortable()
    .Filterable()
    .Groupable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
)
